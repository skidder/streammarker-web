<h1>Reset Password</h1>

<div class="row">
  <div class="col-xs-4">
    <%= form_for(@user, :url => password_reset_index_path ) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit:value=> "Submit",  :class => "btn btn-sm btn-primary" %>
        <%= link_to "Cancel", static_pages_home_path, :class => "btn btn-sm btn-default" %>
      </div>
    <% end %>
  </div>
</div>