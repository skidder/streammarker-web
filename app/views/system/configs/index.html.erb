<% provide(:title, 'System Configuration') %>

<div class="row">
  <div class="col-md-8">
    <p><%= link_to %{<span class="glyphicon glyphicon-plus"></span>&nbspAdd Site}.html_safe, new_system_config_path, :method => :get, :class => "btn btn-sm btn-primary" %></p>
    <% if @configs.count > 0 %>
      <table class="table table-striped" border="1">
        <thead>
          <tr>
            <th>ID</th>
            <th>Key</th>
            <th>Value</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @configs.each do |config| %>
            <tr>
              <td><%= config.id %></td>
              <td><%= config.key %></td>
              <td><%= config.value %></td>
              <td>&nbsp;<%= link_to %{<span class="glyphicon glyphicon-edit"></span>}.html_safe, edit_system_config_path(config) %>&nbsp;
                <%= link_to %{<span class="glyphicon glyphicon-trash"></span>}.html_safe, config, :method => :delete, data: { confirm: 'Are you sure you want to delete this config?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <b><i><ul>No configuration items</ul></i></b>
    <% end %>
  </div>
</div>
