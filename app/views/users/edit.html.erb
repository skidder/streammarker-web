<h1>Edit User Info</h1>
<div class="well well-lg">
	<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-4">
				<%= f.label :first_name %><br>
				<%= f.text_field :first_name, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-4">
				<%= f.label :last_name %><br>
				<%= f.text_field :last_name, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-4">
				<%= f.label :company %><br>
				<%= f.text_field :company, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-3">
				<%= f.label :phone_number %><br>
				<%= f.text_field :phone_number, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-4">
				<%= f.label :email %><br>
				<%= f.text_field :email, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.submit "Update Personal Info", :class => "btn btn-sm btn-primary" %>
		<%= link_to "Cancel", @user.id.nil? ? static_pages_home_path : dashboard_path, :class => "btn btn-sm btn-default" %>
	</div>
	<% end %>
</div>
<div class="well well-lg">
	<%= form_for @user, as: :post, url: change_password_user_path(@user), method: :patch do |f| %>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-4">
				<%= f.label :password %><br>
				<%= f.password_field :password, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-4">
				<%= f.label :password_confirmation %><br>
				<%= f.password_field :password_confirmation, :class => 'form-control' %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.submit "Change Password", :class => "btn btn-sm btn-primary" %>
		<%= link_to "Cancel", @user.id.nil? ? static_pages_home_path : dashboard_path, :class => "btn btn-sm btn-default" %>
	</div>
	<% end %>
</div>