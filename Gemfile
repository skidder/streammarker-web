source 'https://rubygems.org'
ruby '2.2.3'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 4.2.5.1'
gem 'railties', '~> 4.2.5.1'

group :development do
  # Use sqlite3 as the database for Active Record
  gem 'sqlite3', '~> 1.3.11'
end

group :production do
  gem 'pg', '0.18.4'
  gem 'rails_12factor', '~> 0.0.2'
  gem 'newrelic_rpm'
end

gem 'puma', '~> 2.16'

gem 'tzinfo', '~> 1.2', '>= 1.2.2'

gem 'httparty', '~> 0.13.5'

# Calculate sunrise-sunset times for a lat-long
gem 'RubySunrise', '~> 0.3.1'

# AWS
gem 'aws-sdk', '~> 2.2.14'

# Geolocation for Device finding
gem 'geocoder', '~> 1.1.9'

# Provide list of countries for form select
gem 'carmen-rails', git: 'git://github.com/jim/carmen-rails.git'

# Bootstrap for site layout
gem 'bootstrap-sass', '~> 3.3.6'

gem 'libv8', '~> 3.16.14.7'
gem 'therubyracer', '~> 0.12.1'

gem 'twitter-bootswatch-rails', '~> 3.3.4.0'

# twitter bootstrap helpers gem, e.g., alerts etc...
gem 'twitter-bootswatch-rails-helpers'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0.4'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails', '~> 3.1.0'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks', '~> 2.5', '>= 2.5.3'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.4.0'

# Required for password hashing
gem 'bcrypt', '~> 3.1.10'

gem 'rack-google-analytics'

# Needed for the Contact Us form
gem 'mail_form', '~> 1.5.1'
gem 'simple_form', '~> 3.2.1'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Redis client for DynamoDB caching
gem 'redis', '~> 3.2.2'

